<% provide :title, t("sign_up") %>

<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
        html: {class: "login100-form validate-form", method: :patch }) do |f| %>
        <span class="login100-form-title p-b-43">
          <%= t ".edit" %>
        </span>
        <div class="wrap-input100 validate-input">
          <%= f.text_field :fullname, autocomplete: "fullname", class: "input100", placeholder: t(".name") %>
          <span class="focus-input100"></span>
        </div>
         <%= render partial: "devise/shared/error_messages_for_field", locals: {object: resource, attr: :fullname } %>
        <div class="wrap-input100 validate-input">
          <%= f.email_field :email, autocomplete: "email",
            class: "input100", placeholder: t(".email") %>
          <span class="focus-input100"></span>
        </div>
         <%= render partial: "devise/shared/error_messages_for_field", locals: {object: resource, attr: :email } %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="wrap-input100 validate-input">
          <%= f.password_field :password, class: "input100", placeholder: t(".password") %>
          <span class="focus-input100"></span>
        </div>
        <%= render partial: "devise/shared/error_messages_for_field", locals: {object: resource, attr: :password } %>
        <div class="wrap-input100 validate-input">
          <%= f.password_field :password_confirmation, class: "input100", placeholder: t(".password_confirmation") %>
          <span class="focus-input100"></span>
        </div>
        <%= render partial: "devise/shared/error_messages_for_field", locals: {object: resource, attr: :password_confirmation } %>
        <div class="wrap-input100 validate-input">
          <%= f.password_field :current_password, class: "input100", placeholder: t(".current_password") %>
          <span class="focus-input100"></span>
        </div>
        <%= render partial: "devise/shared/error_messages_for_field", locals: {object: resource, attr: :current_password } %>
        <div class="container-login100-form-btn">
          <%= f.submit t(".update"), class: "login100-form-btn" %>
        </div>
        <div class="text-center p-t-46 p-b-20">
          <span class="txt2">
            <%= link_to t("log_in"), login_path %>
          </span>
        </div>
        <% if current_user.orders.empty? %>
          <div class="text-center p-t-46 p-b-20">
            <span class="txt2">
              <%= link_to t(".cancel_account"), registration_path(resource_name), data: { confirm: t(".cancel_account_message") }, method: :delete %>
            </span>
          </div>
        <% end %>
        <div class="text-center p-t-46 p-b-20">
          <span class="txt2">
            <%= link_to t(".back"), :back %>
          </span>
        </div>
      <% end %>
      <div class="login100-more"></div>
    </div>
  </div>
</div>
