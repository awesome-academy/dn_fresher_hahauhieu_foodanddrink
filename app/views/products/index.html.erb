<% provide :title, t(".products") %>
<% provide :product_title, t(".all_products") %>
<%= search_form_for @q, class: "form-inline row justify-content-center" do |f| %>
  <%= f.search_field :name_cont, class: "form-control", placeholder: t(".name") %>
  <%= f.search_field :price_gteq, class: "form-control", placeholder: t(".price_greater_than") %>
  <%= f.search_field :price_lteq, class: "form-control", placeholder: t(".price_lower_than") %>
  <%= f.submit %>
<% end %>
<% if @products.any? %>
<section class="hero">
  <div class="container">
    <% if @products != nil && @products.any? %> 
        <%= render "layouts/all_products" %>
        <div class="row justify-content-center">
          <%== pagy_bootstrap_nav(@pagy) %>
        </div>
    <% end %>
    
  </div>
</section>
<% else %>
  <h4 class="text-danger text-center"><%= t "error.not_found_product" %></h4>
<% end %>
