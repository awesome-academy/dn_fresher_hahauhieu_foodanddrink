<% provide :title, t(".products") %>
<% provide :product_title, t(".all_products") %>
<% if @products.any? %>
<section class="hero">
  <div class="container">
    <% if @products != nil && @products.any? %> 
        <%= render "layouts/all_products" %>
        <div class="row justify-content-center">
          <%== pagy_bootstrap_nav(@pagy) %>
        </div>
    <% end %>
  </div>
</section>
<% else %>
  <h4 class="text-danger text-center"><%= t "error.not_found_product" %></h4>
<% end %>
