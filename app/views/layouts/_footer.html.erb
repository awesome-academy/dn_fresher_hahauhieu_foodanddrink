<footer class="footer spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-6 col-sm-6">
        <div class="footer__about">
          <div class="footer__about__logo">
            <%= link_to root_path do %><%= image_tag "logo.png" %><% end %>
          </div>
          <ul>
            <li><%= t ".address" %></li>
            <li><%= t ".phone" %></li>
            <li><%= t ".email" %></li>
          </ul>
        </div>
      </div>
      <div class="col-lg-4 col-md-6 col-sm-6 offset-lg-1">
        <div class="footer__widget">
          <h6><%= t ".links" %></h6>
          <ul>
            <li><a href="#"><%= t ".about_us" %></a></li>
            <li><a href="#"><%= t ".about_shop" %></a></li>
            <li><a href="#"><%= t ".security_shop" %></a></li>
            <li><a href="#"><%= t ".delivery_info" %></a></li>
            <li><a href="#"><%= t ".privacy_policy" %></a></li>
          </ul>
        </div>
      </div>
      <div class="col-lg-4 col-md-12">
        <div class="footer__widget">
          <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!
            1m3!1d3833.7157431063397!2d108.21780491485862!3d16.
            080233988874124!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!
            1s0x3142183be28239a9%3A0x31b1ff8a6913b174!2zMTYgTMO9IFRoxrDhu51uZy
            BLaeG7h3QsIFRo4bqhY2ggVGhhbmcsIEjhuqNpIENow6J1LCDEkMOgIE7hurVuZyA1
            NTAwMDA!5e0!3m2!1svi!2s!4v1641529608851!5m2!1svi!2s" 
            width="600" height="250" style="border:0;" loading="lazy">
          </iframe>
        </div>
      </div>
  </div>
  <div class="row">
      <div class="col-lg-12">
        <div class="footer__copyright">
          <div class="footer__copyright__text">
            <p>
              <%= t ".copyright" %>
              <%= t ".payment_cart" %>
              <i class="fa fa-heart" aria-hidden="true"></i> 
            </p>
          </div>
          <div class="footer__copyright__payment">
            <%= image_tag "payment-item.png" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
