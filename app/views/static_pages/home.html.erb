    <div class="row">
      <div class="col-lg-12">
        <div class="hero__item set-bg background_banner">
          <div class="hero__text">
            <span><%= t ".fresh_fruit" %></span>
            <h2><%= t ".vegetable" %> <br><%= t ".organic" %></h2>
            <p><%= t ".free_ship" %></p>
            <%= link_to t(".shop_now"), "#", class: "primary-btn" %>
          </div>
        </div>
      </div>
    </div>
    <%= render "layouts/all_products" %>
  </div>
</section>
